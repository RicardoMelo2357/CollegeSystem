<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CollegeSystem</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("College", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Courses", "Index", "Course")</li>
                    <li>@Html.ActionLink("Subject", "Index", "Subject")</li>
                    <li>@Html.ActionLink("Studants", "Index", "Studant")</li>
                    <li>@Html.ActionLink("Teachers", "Index", "Teacher")</li>
                    <li>@Html.ActionLink("Studant Grade", "Index", "StudantGrade")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" ng-app="CollegeSystemApp">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CollegeSystem</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/AngularJS/Main.js")
    @Scripts.Render("~/AngularJS/Controllers/HomeController.js")
    @Scripts.Render("~/AngularJS/Controllers/StudantController.js")
    @Scripts.Render("~/AngularJS/Controllers/CourseController.js")
    @Scripts.Render("~/AngularJS/Controllers/SubjectController.js")
    @Scripts.Render("~/AngularJS/Controllers/TeacherController.js")
    @Scripts.Render("~/AngularJS/Controllers/StudantGradeController.js")

    @*<script src="~/AngularJS/Main.js"></script>*@
    @*<script src="~/AngularJS/Controllers/HomeController.js"></script>*@

    @RenderSection("scripts", required: false)
</body>
</html>
