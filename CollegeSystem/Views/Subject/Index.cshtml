<!DOCTYPE html>

<div ng-controller="SubjectController">
    <h2>{{title}}</h2>

    <div class="container">
        <div class="col-md-12">

            <div class="col-md-4">
                <h4 class="heading"><strong>Select </strong> Course <span></span></h4>
                <select ng-model="Object.CourseId">
                    <option ng-repeat="course in ListCourse" value="{{course.CourseId}}">{{course.CourseName}}</option>
                </select>
            </div>

            <div class="col-md-4">
                <div class="form_main">
                    <h4 class="heading"><strong>Add </strong> Subject <span></span></h4>
                    <div class="form">
                        <form action="contact_send_mail.php" method="post" id="contactFrm" name="contactFrm">
                            <input type="text" required="" placeholder="Subject Name" name="name" class="txt" ng-model="Object.SubjectName">
                            <button type="button" ng-click="AddSubject(Object)" class="txt2">Add</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Course Name</th>
                            <th>Subject Name</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="subject in ListSubject">
                            <td>{{subject.SubjectId}}</td>
                            <td>{{subject.CourseId.CourseName}}</td>
                            <td>{{subject.SubjectName}}</td>
                            <td><button ng-click="DeleteSubject(subject.SubjectId)">Delete</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>